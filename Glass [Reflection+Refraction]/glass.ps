varying vec3 ReflectDir;
varying vec3 RefractDir;

uniform samplerCube cubemap;
 
void main (void)
{
	vec4 color;

	color=vec4(textureCube(cubemap,ReflectDir));
	vec4 reflectColor=clamp(color,0.0,1.0);

    vec4 refractColor = textureCube(cubemap, RefractDir);

    gl_FragColor = mix(reflectColor, refractColor, 0.5);

 
}